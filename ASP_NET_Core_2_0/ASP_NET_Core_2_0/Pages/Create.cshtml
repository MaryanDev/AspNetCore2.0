@page
@model ASP_NET_Core_2_0.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div>
    <h1>Create new product</h1>
    <div>
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div>
                <label asp-for="Product.Title"></label>
                <div class="form-group">
                    <input class="form-control" asp-for="Product.Title" />
                    <span class="text-danger" asp-validation-for="Product.Title"></span>
                </div>
                <label asp-for="Product.Price"></label>
                <div class="form-group">
                    <input class="form-control" asp-for="Product.Price" />
                    <span class="text-danger" asp-validation-for="Product.Price"></span>
                </div>
            </div>
            <div>
                <button class="form-control btn btn-success" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>