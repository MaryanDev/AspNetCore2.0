@page 
@model ASP_NET_Core_2_0.Pages.ProductsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Products List</h1>
<form method="post">
    <table class="table table-hover">
        <thead>
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Price</td>
            <td colspan="2"></td>
        </tr>
        </thead>
        <tbody>
        <tr><td colspan="5" style="text-align: center"><a asp-page="./Create">Add</a></td></tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Price</td>
                <td><a asp-page="./Edit" asp-route-id="@product.Id">Edit</a></td>
                <td><button class="btn btn-danger" type="submit" asp-page-handler="delete" asp-route-id="@product.Id">Delete</button></td>
            </tr>
        }
        </tbody>
    </table>
    <div>
        <ul class="pagination">
            @for (var i = 0; i < Model.numberOfPages; i++)
            {
                <li><a asp-page-handler="get" asp-route-pageNum="@(i + 1)">@(i + 1)</a></li>
            }
        </ul>
    </div>
</form>
